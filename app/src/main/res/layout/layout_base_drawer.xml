<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/lbd_drawerlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/lbd_contentcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" />

    <android.support.design.widget.NavigationView
        android:id="@+id/lbd_navigationview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:scrollbarSize="4dp"
        android:scrollbarStyle="outsideOverlay"
        app:headerLayout="@layout/layout_navheader"
        app:itemIconTint="?attr/colorAccent"
        app:itemTextColor="?attr/colorAccent"
        app:menu="@menu/menu_drawer"
        tools:layout_gravity="" />

</android.support.v4.widget.DrawerLayout>